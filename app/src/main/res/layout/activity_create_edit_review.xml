<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app"
    tools:context=".activity_create_edit_review">

    <LinearLayout
        android:id="@+id/cabezeraLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/nova_ressenya"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fondo_app"
        android:contentDescription="@string/flechaatras"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineaLay"
        app:tint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/lineaLay"
        android:layout_width="match_parent"
        android:background="@color/verde"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cabezeraLay"/>


    <RadioGroup
        android:id="@+id/rgEstrellas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/lineaLay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <RadioButton
            android:id="@+id/rbE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/baseline_star_rate_24"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rbE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/baseline_star_rate_24"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rbE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/baseline_star_rate_24"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rbE4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/baseline_star_rate_24"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="5dp"/>

        <RadioButton
            android:id="@+id/rbE5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/baseline_star_rate_24"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_margin="5dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvInformacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/escriu_la_teva_ressenya"
        android:fontFamily="serif"
        app:layout_constraintTop_toBottomOf="@id/rgEstrellas"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/review_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tvInformacio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="top"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/LlSegur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/review_input"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp">

        <CheckBox
            android:id="@+id/csR1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvConfSeg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirma_seguretat"
            android:fontFamily="serif"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/LlSegur"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:backgroundTint="@color/verde"
            app:cornerRadius="5dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/baseline_check_24"
            app:drawableTint="@color/white"/>

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eliminar"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/verde"
            app:cornerRadius="5dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/baseline_delete_24"
            app:drawableTint="@color/white"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
