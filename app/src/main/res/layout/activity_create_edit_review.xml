<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app"
    tools:context=".activity_create_edit_review">

    <LinearLayout
        android:id="@+id/cabezeraLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nova_ressenya"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif" />

    </LinearLayout>



    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fondo_app"
        android:contentDescription="@string/flechaatras"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineaLay"
        app:tint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/lineaLay"
        android:layout_width="match_parent"
        android:background="@color/verde"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cabezeraLay"/>

        <LinearLayout
            android:id="@+id/llEstrellas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/lineaLay"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="150dp"
            >
            <ImageView
                android:id="@+id/ivE1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_rate_24"
                app:tint="@color/verde"
                android:contentDescription="@string/rese_as"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:padding="5dp"
                />
            <ImageView
                android:id="@+id/ivE2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_rate_24"
                app:tint="@color/verde"
                android:contentDescription="@string/rese_as"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:padding="5dp"
                />
            <ImageView
                android:id="@+id/ivE3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_rate_24"
                app:tint="@color/verde"
                android:contentDescription="@string/rese_as"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:padding="5dp"
                />
            <ImageView
                android:id="@+id/ivE4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_star_rate_24"
                app:tint="@color/verde"
                android:contentDescription="@string/rese_as"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:padding="5dp"
                />
            <ImageView
                android:id="@+id/ivE5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/rese_as"
                android:src="@drawable/baseline_star_rate_24"
                app:tint="@color/verde"
                android:layout_weight="1"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:padding="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/llEstrellas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="141dp"
            >

            <RadioButton
                android:id="@+id/rbE1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                />

            <RadioButton
                android:id="@+id/rbE2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                />
            <RadioButton
                android:id="@+id/rbE3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                />
            <RadioButton
                android:id="@+id/rbE4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                />
            <RadioButton
                android:id="@+id/rbE5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvInformacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/escriu_la_teva_ressenya"
            android:fontFamily="serif"
            app:layout_constraintTop_toBottomOf="@id/llRButtons"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/review_input"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tvInformacio"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/LlSegur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/review_input"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"

            >
            <RadioButton
                android:id="@+id/csR1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/tvConfSeg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirma_seguretat"
                android:fontFamily="serif"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/LlSegur"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guardar"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:backgroundTint="@color/verde"
            app:cornerRadius="5dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/baseline_check_24"
            app:drawableTint="@color/white"/>
        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eliminar"
            android:fontFamily="serif"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="@color/verde"
            app:cornerRadius="5dp"
            android:padding="15dp"
            app:drawableEndCompat="@drawable/baseline_clear_24"
            app:drawableTint="@color/white"/>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>