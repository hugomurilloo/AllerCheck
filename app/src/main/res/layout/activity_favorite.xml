<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app"
    tools:context=".activity_favorite">
    <LinearLayout
        android:id="@+id/cabezeraLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preferits"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:fontFamily="serif" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnResenas"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="fitCenter"
        android:padding="8dp"
        android:backgroundTint="@color/fondo_app"
        android:contentDescription="@string/rese_as"
        android:src="@drawable/baseline_star_rate_24"
        app:tint="@color/verde"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineaLay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"/>

    <ImageButton
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/fondo_app"
        android:contentDescription="@string/flechaatras"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lineaLay"
        app:tint="@color/verde"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <View
        android:id="@+id/lineaLay"
        android:layout_width="match_parent"
        android:background="@color/verde"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cabezeraLay"/>

    <TextView
        android:id="@+id/tvRestaurant1"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@+id/lineaLay"
        app:layout_constraintStart_toStartOf="parent"
        android:fontFamily="serif"
        android:layout_marginTop="30dp"
        android:text="@string/restaurant_tokyo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        />
    <LinearLayout
        android:id="@+id/llEstrellas1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRestaurant1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/ivE1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivE2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivE3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivE4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivE5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rese_as"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_4_9"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llVerificat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llEstrellas1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_check_24"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:tint="@color/verde"
            android:contentDescription="@string/verificat"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginStart="7dp"
            />
        <TextView
            android:id="@+id/tvTipus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificat"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDelete1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llVerificat1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/csR1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/verde"
            android:contentDescription="@string/borrar"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tvRestaurant2"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@+id/llDelete1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/la_pizzeria"
        android:fontFamily="serif"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        />
    <LinearLayout
        android:id="@+id/llEstrellas2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvRestaurant2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="150dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/ivEe1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivEe2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivEe3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivEe4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:contentDescription="@string/rese_as"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivEe5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/rese_as"
            android:src="@drawable/baseline_star_rate_24"
            app:tint="@color/verde"
            android:layout_weight="1"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_5"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llVerificat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/llEstrellas2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_check_24"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:tint="@color/verde"
            android:contentDescription="@string/verificat"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginStart="7dp"

            />
        <TextView
            android:id="@+id/tvTipus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/verificat"
            android:fontFamily="serif"
            android:layout_marginStart="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDelete2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/llVerificat2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        >
        <RadioButton
            android:id="@+id/csRr1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            app:tint="@color/verde"
            android:contentDescription="@string/borrar"
            android:layout_weight="1"
            android:padding="5dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/btnGuardar"
        app:layout_constraintTop_toBottomOf="@id/llDelete2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="@string/guardar"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/verde"
        app:cornerRadius="5dp"
        android:padding="15dp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/verde"
        app:itemIconTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_nav_menu" />




</androidx.constraintlayout.widget.ConstraintLayout>