<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_app"
    tools:context=".activity_principal">
    <LinearLayout
        android:id="@+id/cabezeraLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondo_app"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"

        >
        <ImageButton
            android:id="@+id/btnPref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fondo_app"
            android:contentDescription="@string/flechaatras"
            android:src="@drawable/baseline_preferencias_24"
            app:layout_constraintBottom_toBottomOf="@id/lineaLay"
            app:tint="@color/verde"
            />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:iconifiedByDefault="false"
            android:background="@drawable/search_view_bg"
            android:hint="@string/cercar"
            android:queryHint="@string/cercar"
            android:layout_marginStart="5dp"
            />

        <ImageButton
            android:id="@+id/btnRess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fondo_app"
            android:contentDescription="@string/ressenyes"
            android:src="@drawable/baseline_star_rate_24"
            app:layout_constraintBottom_toBottomOf="@id/lineaLay"
            app:tint="@color/verde"
            android:layout_marginStart="5dp"
            />

    </LinearLayout>
    <View
        android:id="@+id/lineaLay"
        android:layout_width="match_parent"
        android:background="@color/verde"
        android:layout_height="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/cabezeraLay"/>

    <LinearLayout
        android:id="@+id/llFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/lineaLay"
