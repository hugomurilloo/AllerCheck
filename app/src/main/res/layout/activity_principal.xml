            android:src="@drawable/baseline_check_24"
            android:scaleX="1.2"
            android:scaleY="1.2"
            app:tint="@color/verde"
            android:contentDescription="@string/verificat"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginStart="7dp"
